<!doctype html>
<html lang="fr">
<head>
    <%- include("partials/head", {title: "Article " + project.title}) %>
    <link rel="stylesheet" href="/stylesheets/content-single-style.css">
    <title>Portfolio</title>
    <script type="module" defer src="/javascripts/main-animator.min.js"></script>
    <script type="application/javascript" src="/javascripts/single-content-scripts.min.js"></script>
</head>
<body>
<%- include("partials/header", {pageHeader: "E4 / E5", pageHeaderShort: "E4/E5", route:"/examens"}) %>

<main>
    <div class="download-popup">
        <div class="download-popup__content">
            <p class="download-popup__title">Téléchargement de la documentation</p>
            <p class="download-popup__text">Veuillez patienter pendant que le téléchargement se lance...</p>
            <div class="download-popup__progress-bar">
                <div class="download-popup__progress-bar__fill"></div>
            </div>
        </div>
    </div>
    <div class="project__image" style="background-image: url('/articles_media/direct_images/<%= project.img %>')">
        <div class="project__header">
            <p class="project__title"><%= project.title %> (<%= new Date(project.created_at).toLocaleDateString(undefined, { day: '2-digit', month: '2-digit', year: 'numeric' }).replace(/\//g, '-') %>)</p>
            <div class="project__description"><%- project.description %></div>
        </div>
    </div>
    <div class="project__body">
        <a class="single-project__download" href="/<%= route %>/pdf/<%= project.slug %>" download="<%= project.slug %>-doc.pdf" target="_blank" rel="noreferrer noopener" title="Télécharger la documentation du projet">
            <img src="/images/download-icon.webp" alt="Download icon">
        </a>
        <%- project.body %>
    </div>
</main>

<%- include("partials/footer") %>
</body>
</html>