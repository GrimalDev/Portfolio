<!doctype html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport"
          content="width=device-width, user-scalable=no, initial-scale=1.0, maximum-scale=1.0, minimum-scale=1.0">
    <meta http-equiv="X-UA-Compatible" content="ie=edge">
    <title>Portfolio</title>
    <link rel="stylesheet" href="/stylesheets/articles-style.css">
    <% include("partials/general-js") %>

</head>
<body>

<%- include("partials/header", {pageHeader: "Projects", pageHeaderShort: "Projects", route:"/projects"}) %>

<main>
    <div class="home-section">
        <h1>All my Projects</h1>
    </div>
    <div id="article-cards-all-container">
        <% projects.forEach(obj => { %>
            <div class="article-card-container home-section shadow-section">
                <img src="/images/articles/<%= obj.img %>" alt="<%= obj.title %> image">
                <h2 class="article-title"><%= obj.title %></h2>
                <h3 class="article-description"><%= obj.description %></h3>
                <pre class="article-content"><%= obj.content_body %></pre>
            </div>
        <% }); %>
    </div>
</main>

<%- include("partials/footer") %>

</body>
</html>
