<!doctype html>
<html lang="fr">
<head>
    <meta charset="UTF-8">
    <meta name="viewport"
          content="width=device-width, user-scalable=no, initial-scale=1.0, maximum-scale=1.0, minimum-scale=1.0">
    <meta http-equiv="X-UA-Compatible" content="ie=edge">
    <link rel="stylesheet" href="/stylesheets/examens-style.css">
    <title>E4 / E5</title>
</head>
<body>
<%- include("partials/header", {pageHeader: "E4 / E5", pageHeaderShort: "E4/E5", route:"/examens"}) %>

<main>
    <h1>Missions E4 & E5</h1>
    <h2>Pour les examens du BTS SIO option SLAM</h2>

    <h3>Mes projets E4</h3>
    <div class="cards__main-container">
        <% projectsE4.forEach(project => {%>
            <div class="card__container card__category__<%= project.categories %>">
                <div class="card__image" style="background-image: url('/images/articles/<%= project.img %>')"></div>
                <div class="card__body">
                    <p class="card__title"><%= project.title %></p>
                    <p class="card__text"><%= project.description %></p>
                </div>
                <a class="card__link" href="/projects/view/<%= project.slug %>"></a>
            </div>
        <% }) %>
    </div>

    <h3>Mes missions E5</h3>
    <div class="cards__main-container">
        <% projectsE5.forEach(project => {%>
            <div class="card__container card__category__<%= project.categories %>">
                <a class="card__link" href="/projects/view/<%= project.slug %>"></a>
                <div class="card__image" style="background-image: url('/images/articles/<%= project.img %>')"></div>
                <div class="card__body">
                    <p class="card__title"><%= project.title %></p>
                    <p class="card__text"><%= project.description %></p>
                </div>
            </div>
        <% }) %>
    </div>
</main>

<%- include("partials/footer") %>
</body>
</html>